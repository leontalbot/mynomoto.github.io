(ns blog.route
  (:require
    [clojure.string :as str]))

(def route (route-cell route "blog"))

(defn get-blog-permalink [hash]
  (let [[_ mp permalink] (str/split hash #"/" 3)]
    (when (= "blog" mp)
      permalink)))

(defn get-main-hash [hash]
  (let [[_ mp _] (str/split hash #"/" 3)]
    mp))

(defc= main-hash
  (get-main-hash route))

(defc= permalink
  (get-blog-permalink route))
